<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundGrey"
    tools:context=".AddEntityActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/add_business_entity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundGrey"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/backgroundGrey"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addEntity_firm_name_label"
                android:layout_width="wrap_content"
                android:text="@string/company_s_name"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_firm_name_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_firm_name_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:inputType="textCapWords"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:hint="Enter company's name"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_owner_name_label"
                android:layout_width="wrap_content"
                android:text="Company Owner's Name"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_firm_name_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_owner_name_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_owner_name_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:hint="Enter company owner name"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_address_label"
                android:layout_width="wrap_content"
                android:text="Company's Address"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_owner_name_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_address_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_address_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:hint="Enter company's address"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_contact_primary_label"
                android:layout_width="wrap_content"
                android:text="Owner's Contact Number"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_address_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_contact_primary_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_contact_primary_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:inputType="number"
                android:maxLength="10"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:hint="Enter owner's primary contact no."
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_contact_alt_label"
                android:layout_width="wrap_content"
                android:text="Owner's Alternate Contact Number"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_contact_primary_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_contact_alt_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_contact_alt_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:maxLength="10"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:hint="Enter owner's alternate contact no."
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_gst_label"
                android:layout_width="wrap_content"
                android:text="Company's GST Number"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_contact_alt_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_gst_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_gst_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:inputType="text"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:hint="Enter company's GST no."
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addEntity_amount_label"
                android:layout_width="wrap_content"
                android:text="Amount"
                android:textSize="14sp"
                android:textColor="@color/cloudGrey"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_gst_et"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addEntity_amount_et"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_amount_label"
                android:textColorHint="#e5e5e5"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_rectangular"
                android:textColor="#000000"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:hint="INR."
                android:inputType="number"
                android:maxLength="7"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addEntity_amount_et"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>